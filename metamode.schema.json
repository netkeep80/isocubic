{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "metamode.schema.json",
  "title": "MetaMode Descriptor",
  "description": "Schema for metamode.json files that describe project directories, files, and their relationships",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to the JSON Schema for validation"
    },
    "name": {
      "type": "string",
      "description": "Name of the directory or module"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (only for root metamode.json)"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of this directory's purpose"
    },
    "languages": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Programming languages used in this directory"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Tags for categorization and search"
    },
    "files": {
      "type": "object",
      "description": "Map of file names to their metadata",
      "additionalProperties": {
        "$ref": "#/$defs/FileDescriptor"
      }
    },
    "directories": {
      "type": "object",
      "description": "Map of subdirectory names to their metadata with references to child metamode.json",
      "additionalProperties": {
        "$ref": "#/$defs/DirectoryDescriptor"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "FileDescriptor": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": {
          "type": "string",
          "description": "Human-readable description of the file's purpose"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Tags for categorization"
        },
        "phase": {
          "type": "integer",
          "minimum": 1,
          "description": "Development phase this file belongs to"
        },
        "status": {
          "type": "string",
          "enum": ["stable", "beta", "experimental", "deprecated"],
          "description": "File/module status"
        },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Relative paths to files this file depends on"
        }
      },
      "additionalProperties": false
    },
    "DirectoryDescriptor": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": {
          "type": "string",
          "description": "Human-readable description of the subdirectory"
        },
        "metamode": {
          "type": "string",
          "description": "Relative path to the subdirectory's metamode.json (auto-inferred as {dirname}/metamode.json if omitted)"
        }
      },
      "additionalProperties": false
    }
  }
}
